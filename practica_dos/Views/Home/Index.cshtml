@model List<Amigo>

@{
   
    ViewData["Title"] = "Index";
}
<div class="row row-cols-1 row-cols-md-3">

    @foreach (var amigo in Model)
     {
        <div class="col">
            <div class="card m-3">
                <div class="card-header text-center">
                    <h3>@amigo.Nombre</h3>
                </div>

                <img class="card-img-top" src="~/images/6_logo.jpg" asp-append-version="true" />

                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@amigo.Id" class="btn btn-primary">ver</a>
                    <a href="#" class="btn btn-primary">Editar</a>
                    <a href="#" class="btn btn-danger">Borrar</a>
                </div>

            </div>
        </div>
     }

</div>