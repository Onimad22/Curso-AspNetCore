@model Amigo
@{
    ViewBag.Title = "Nuevo Amigo";
}

<form asp-controller="Home" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row p-1">
        <label class="col-sm-2 col-form-label" asp-for="Nombre"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Nombre" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        
    </div>

    <div class="row p-1" >
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
    </div>

    <div class="row p-1"> 
        <label class="col-sm-2 col-form-label" asp-for="Ciudad"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="Ciudad" asp-items="Html.GetEnumSelectList<Province>()">
                <option value="">Seleccione uno</option>
            </select>
            <span asp-validation-for="Ciudad" class="text-danger"></span>

        </div>
    </div>

    <div class="row p-1">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit"> Crear </button>

        </div>
    </div>

</form>